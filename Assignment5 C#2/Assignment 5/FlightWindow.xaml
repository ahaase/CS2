<Window x:Class="Assignment_5.FlightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_5"
        mc:Ignorable="d"
        Title="PlaneWindow" Height="350" Width="350"
        ResizeMode="CanMinimize">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" Height="275" Margin="0,10,0,0" VerticalAlignment="Top" Width="329"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="85" Click="startButton_Click"/>
        <ComboBox x:Name="changeRouteComboBox" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="120" IsEnabled="false" SelectionChanged="changeRouteComboBox_SelectionChanged"/>
        <Button x:Name="landButton" Content="Land" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="85" IsEnabled="false" Click="landButton_Click"/>
    </Grid>
</Window>
